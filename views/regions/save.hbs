<div class="row">
    <div class="col-md-6">
        <h1>{{#if editMode}}Editar Región{{else}}Crear Nueva Región{{/if}}</h1>
        
        {{#if error}}
        <div class="alert alert-danger">
            {{error}}
        </div>
        {{/if}}
        
        <form method="POST" action="{{#if editMode}}/regions/edit{{else}}/regions/create{{/if}}">
            {{#if editMode}}
            <input type="hidden" name="regionId" value="{{region.id}}">
            {{/if}}
            
            <div class="mb-3">
                <label for="Name" class="form-label">Nombre de la Región *</label>
                <input type="text" class="form-control" id="Name" name="Name" 
                       value="{{#if editMode}}{{region.name}}{{/if}}" required>
            </div>
            
            <div class="mb-3">
                <a href="/regions" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Volver Atrás
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> {{#if editMode}}Guardar Cambios{{else}}Crear Región{{/if}}
                </button>
            </div>
        </form>
    </div>
</div>