<div class="row">
    <div class="col-md-6">
        <h1>{{#if editMode}}Editar Tipo{{else}}Crear Nuevo Tipo{{/if}}</h1>
        
        {{#if error}}
        <div class="alert alert-danger">
            {{error}}
        </div>
        {{/if}}
        
        <form method="POST" action="{{#if editMode}}/types/edit{{else}}/types/create{{/if}}">
            {{#if editMode}}
            <input type="hidden" name="TypeId" value="{{type.id}}">
            {{/if}}
            
            <div class="mb-3">
                <label for="Name" class="form-label">Nombre del Tipo *</label>
                <input type="text" class="form-control" id="Name" name="Name" 
                       value="{{#if editMode}}{{type.name}}{{/if}}" required>
            </div>
            
            <div class="mb-3">
                <a href="/types" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Volver Atr√°s
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> {{#if editMode}}Guardar Cambios{{else}}Crear Tipo{{/if}}
                </button>
            </div>
        </form>
    </div>
</div>